{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "ES2022",
      "ES6",
      "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": ["src/**/*.ts", "package.json"]
}
